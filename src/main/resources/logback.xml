<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="false">

    <property name="log.dir" value="logs"/>
    <property name="log.name" value="web"/>
    <property name="pattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%logger{36}:%line] %msg%n"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${pattern}</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.dir}/${log.name}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${log.dir:-.}/${log.name}-%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <totalSizeCap>100MB</totalSizeCap>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${pattern}</pattern>
        </encoder>
        <append>true</append>
    </appender>

    <logger name="gate.creole.CreoleRegisterImpl" level="error"/>
    <logger name="org.lappsgrid" level="warn"/>
    <logger name="org.lappsgrid.askme" level="info"/>
    <logger name="org.lappsgrid.askme.web" level="debug"/>
    <logger name="org.lappsgrid.askme.web.controllers" level="info"/>
    <logger name="org.lappsgrid.askme.web.services" level="debug"/>

    <root level="warn">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE"/>
    </root>

</configuration>
